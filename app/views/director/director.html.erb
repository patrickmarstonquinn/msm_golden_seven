<h1>List of Directors</h1>

<a href="http://localhost:3000/director/new">Add a New Director</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_directors.each do |director| %>
  <tr>
    <td>
      <img src="<%= director.image_url %>" width="80">
    </td>
    <td>
      <%= director.name %>
    </td>
    <td>
      <a href="http://localhost:3000/director/<%= director.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/director/<%= director.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/director/delete/<%= director.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
