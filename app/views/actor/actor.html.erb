<h1>List of Actors</h1>

<a href="http://localhost:3000/actor/new">Add a New Actor</a>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th colspan="3">Actions</th>
  </tr>
  <% @list_of_actors.each do |actor| %>
  <tr>
    <td>
      <img src="<%= actor.image_url %>" width="80">
    </td>
    <td>
      <%= actor.name %>
    </td>
    <td>
      <a href="http://localhost:3000/actor/<%= actor.id %>">Show</a>
    </td>
    <td>
      <a href="http://localhost:3000/actor/<%= actor.id %>/edit">Edit</a>
    </td>
    <td>
      <a href="http://localhost:3000/actor/delete/<%= actor.id %>">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
